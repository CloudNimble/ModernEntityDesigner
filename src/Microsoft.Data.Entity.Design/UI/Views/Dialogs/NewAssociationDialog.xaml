<vs:DialogWindow x:Class="Microsoft.Data.Entity.Design.UI.Views.Dialogs.NewAssociationDialog"
                 x:ClassModifier="internal"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:dialogs="clr-namespace:Microsoft.Data.Entity.Design.UI.Views.Dialogs"
                 xmlns:ded="clr-namespace:Microsoft.Data.Entity.Design"
                 mc:Ignorable="d"
                 d:DesignWidth="620"
                 d:DesignHeight="520"
                 Width="620"
                 MinWidth="580"
                 MinHeight="480"
                 SizeToContent="Height"
                 ShowInTaskbar="False"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 FontFamily="{DynamicResource VsFont.EnvironmentFontFamily}"
                 FontSize="{DynamicResource VsFont.EnvironmentFontSize}"
                 Background="{DynamicResource VsBrush.ToolWindowBackground}"
                 Title="{x:Static dialogs:DialogsResource.NewAssociationDialog_Title}"
                 HasHelpButton="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Association Name -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static dialogs:DialogsResource.NewAssociationDialog_AssociationNameLabel}"
                   Margin="0,0,0,4"/>
        <TextBox x:Name="AssociationNameTextBox"
                 Grid.Row="1"
                 Margin="0,0,0,12"
                 TextChanged="AssociationNameTextBox_TextChanged"/>

        <!-- Two-panel entity endpoints -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- End 1 GroupBox -->
            <GroupBox Grid.Column="0"
                      x:Name="End1GroupBox"
                      Header="{x:Static dialogs:DialogsResource.NewAssociationDialog_EndLabel}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Entity -->
                    <TextBlock Grid.Row="0"
                               Text="{x:Static dialogs:DialogsResource.NewAssociationDialog_EntityLabel}"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="Entity1ComboBox"
                              Grid.Row="1"
                              Margin="0,0,0,12"
                              SelectionChanged="Entity1ComboBox_SelectionChanged"
                              AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_Entity1AccessibleName}"/>

                    <!-- Multiplicity -->
                    <TextBlock Grid.Row="2"
                               Text="{x:Static dialogs:DialogsResource.NewAssociationDialog_MultiplicityLabel}"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="Multiplicity1ComboBox"
                              Grid.Row="3"
                              Margin="0,0,0,12"
                              AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_Multiplicity1AccessibleName}"/>

                    <!-- Navigation Property -->
                    <CheckBox x:Name="NavigationProperty1Checkbox"
                              Grid.Row="4"
                              Content="{x:Static dialogs:DialogsResource.NewAssociationDialog_NavigationPropertyLabel}"
                              IsChecked="True"
                              Margin="0,0,0,4"
                              Checked="NavigationProperty1Checkbox_CheckedChanged"
                              Unchecked="NavigationProperty1Checkbox_CheckedChanged"/>
                    <TextBox x:Name="NavigationProperty1TextBox"
                             Grid.Row="5"
                             TextChanged="NavigationProperty1TextBox_TextChanged"
                             AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_NavigationProperty1AccessibleName}"/>
                </Grid>
            </GroupBox>

            <!-- End 2 GroupBox -->
            <GroupBox Grid.Column="2"
                      x:Name="End2GroupBox"
                      Header="{x:Static dialogs:DialogsResource.NewAssociationDialog_EndLabel}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Entity -->
                    <TextBlock Grid.Row="0"
                               Text="{x:Static dialogs:DialogsResource.NewAssociationDialog_EntityLabel}"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="Entity2ComboBox"
                              Grid.Row="1"
                              Margin="0,0,0,12"
                              SelectionChanged="Entity2ComboBox_SelectionChanged"
                              AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_Entity2AccessibleName}"/>

                    <!-- Multiplicity -->
                    <TextBlock Grid.Row="2"
                               Text="{x:Static dialogs:DialogsResource.NewAssociationDialog_MultiplicityLabel}"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="Multiplicity2ComboBox"
                              Grid.Row="3"
                              Margin="0,0,0,12"
                              AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_Multiplicity2AccessibleName}"/>

                    <!-- Navigation Property -->
                    <CheckBox x:Name="NavigationProperty2Checkbox"
                              Grid.Row="4"
                              Content="{x:Static dialogs:DialogsResource.NewAssociationDialog_NavigationPropertyLabel}"
                              IsChecked="True"
                              Margin="0,0,0,4"
                              Checked="NavigationProperty2Checkbox_CheckedChanged"
                              Unchecked="NavigationProperty2Checkbox_CheckedChanged"/>
                    <TextBox x:Name="NavigationProperty2TextBox"
                             Grid.Row="5"
                             TextChanged="NavigationProperty2TextBox_TextChanged"
                             AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_NavigationProperty2AccessibleName}"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Create Foreign Keys Checkbox -->
        <CheckBox x:Name="CreateForeignKeysCheckBox"
                  Grid.Row="3"
                  Content="{x:Static dialogs:DialogsResource.NewAssociationDialog_CreateForeignKeysLabel_Default}"
                  IsChecked="True"
                  Margin="0,0,0,12"/>

        <!-- Explanation TextBox -->
        <TextBox x:Name="ExplanationTextBox"
                 Grid.Row="4"
                 Height="80"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,12"
                 AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewAssociationDialog_ExplanationBoxAccessibleName}"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="{x:Static dialogs:DialogsResource.OKButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Margin="0,0,8,0"
                    Click="OkButton_Click"
                    IsDefault="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.OKButton_AccessibleName}"/>
            <Button Content="{x:Static dialogs:DialogsResource.CancelButton_Text}"
                    MinWidth="75"
                    Height="23"
                    IsCancel="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.CancelButton_AccessibleName}"/>
        </StackPanel>
    </Grid>
</vs:DialogWindow>
