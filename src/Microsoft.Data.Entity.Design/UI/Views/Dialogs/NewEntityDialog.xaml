<vs:DialogWindow x:Class="Microsoft.Data.Entity.Design.UI.Views.Dialogs.NewEntityDialog"
                 x:ClassModifier="internal"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:dialogs="clr-namespace:Microsoft.Data.Entity.Design.UI.Views.Dialogs"
                 mc:Ignorable="d"
                 d:DesignWidth="400"
                 d:DesignHeight="340"
                 Width="400"
                 SizeToContent="Height"
                 MinWidth="360"
                 ShowInTaskbar="False"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 FontFamily="{DynamicResource VsFont.EnvironmentFontFamily}"
                 FontSize="{DynamicResource VsFont.EnvironmentFontSize}"
                 Background="{DynamicResource VsBrush.ToolWindowBackground}"
                 Title="{x:Static dialogs:DialogsResource.NewEntityDialog_Title}"
                 HasHelpButton="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Entity Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Entity" Style="{StaticResource SectionHeaderStyle}"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Entity Name -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="{x:Static dialogs:DialogsResource.NewEntityDialog_EntityNameLabel}"
                           Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="EntityNameTextBox"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0,0,0,8"
                         TextChanged="EntityNameTextBox_TextChanged"
                         AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewEntityDialog_EntityNameLabel}"/>

                <!-- Base Type -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="{x:Static dialogs:DialogsResource.NewEntityDialog_BaseTypeLabel}"
                           Style="{StaticResource FieldLabelStyle}"/>
                <ComboBox x:Name="BaseTypeComboBox"
                          Grid.Row="1" Grid.Column="1"
                          Margin="0,0,0,8"
                          SelectionChanged="BaseTypeComboBox_SelectionChanged"
                          AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewEntityDialog_BaseTypeLabel}"/>

                <!-- Entity Set -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="{x:Static dialogs:DialogsResource.NewEntityDialog_EntitySetLabel}"
                           Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="EntitySetTextBox"
                         Grid.Row="2" Grid.Column="1"
                         AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewEntityDialog_EntitySetLabel}"/>
            </Grid>
        </StackPanel>

        <!-- Separator -->
        <Rectangle Grid.Row="1"
                   Height="1"
                   Fill="{DynamicResource VsBrush.ActiveBorder}"
                   Margin="0,0,0,16"/>

        <!-- Key Property Section -->
        <StackPanel x:Name="KeyPropertyGroupBox" Grid.Row="2" Margin="0,0,0,20">
            <!-- Section Header with Checkbox -->
            <CheckBox x:Name="KeyPropertyCheckBox"
                      IsChecked="True"
                      Margin="0,0,0,12"
                      Checked="KeyPropertyCheckBox_CheckedChanged"
                      Unchecked="KeyPropertyCheckBox_CheckedChanged"
                      AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewEntityDialog_CreateKeyLabel}">
                <TextBlock Text="{x:Static dialogs:DialogsResource.NewEntityDialog_KeyPropertyLabel}"
                           Style="{StaticResource SectionHeaderStyle}"
                           Margin="0"/>
            </CheckBox>

            <Grid Margin="24,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Property Name -->
                <TextBlock x:Name="PropertyNameLabel"
                           Grid.Row="0" Grid.Column="0"
                           Text="{x:Static dialogs:DialogsResource.NewEntityDialog_PropertyNameLabel}"
                           Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="PropertyNameTextBox"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0,0,0,8"
                         AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewEntityDialog_PropertyNameLabel}"/>

                <!-- Property Type -->
                <TextBlock x:Name="PropertyTypeLabel"
                           Grid.Row="1" Grid.Column="0"
                           Text="{x:Static dialogs:DialogsResource.NewEntityDialog_PropertyTypeLabel}"
                           Style="{StaticResource FieldLabelStyle}"/>
                <ComboBox x:Name="PropertyTypeComboBox"
                          Grid.Row="1" Grid.Column="1"
                          AutomationProperties.Name="{x:Static dialogs:DialogsResource.NewEntityDialog_PropertyTypeLabel}"/>
            </Grid>
        </StackPanel>

        <!-- Spacer -->
        <Grid Grid.Row="3" Height="8"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="{x:Static dialogs:DialogsResource.OKButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Margin="0,0,8,0"
                    Click="OkButton_Click"
                    IsDefault="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.OKButton_AccessibleName}"/>
            <Button Content="{x:Static dialogs:DialogsResource.CancelButton_Text}"
                    MinWidth="75"
                    Height="23"
                    IsCancel="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.CancelButton_AccessibleName}"/>
        </StackPanel>
    </Grid>
</vs:DialogWindow>
