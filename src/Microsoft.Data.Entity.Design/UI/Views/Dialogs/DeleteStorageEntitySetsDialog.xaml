<vs:DialogWindow x:Class="Microsoft.Data.Entity.Design.UI.Views.Dialogs.DeleteStorageEntitySetsDialog"
                 x:ClassModifier="internal"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:dialogs="clr-namespace:Microsoft.Data.Entity.Design.UI.Views.Dialogs"
                 mc:Ignorable="d"
                 d:DesignWidth="460"
                 d:DesignHeight="290"
                 Width="460"
                 Height="290"
                 ShowInTaskbar="False"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 FontFamily="{DynamicResource VsFont.EnvironmentFontFamily}"
                 FontSize="{DynamicResource VsFont.EnvironmentFontSize}"
                 Background="{DynamicResource VsBrush.ToolWindowBackground}"
                 Title="{x:Static dialogs:DialogsResource.DeleteStorageEntitySetsDialogTitle}"
                 HasHelpButton="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Description Label -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static dialogs:DialogsResource.DeleteStorageEntitySetsDescription}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"/>

        <!-- ListBox for Storage Entity Sets -->
        <ListBox x:Name="StorageEntitySetsListBox"
                 Grid.Row="1"
                 Margin="0,0,0,12"
                 AutomationProperties.Name="{x:Static dialogs:DialogsResource.DeleteStorageEntitySetsListBox_AccessibleName}"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="YesButton"
                    Content="{x:Static dialogs:DialogsResource.YesButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Margin="0,0,8,0"
                    Click="YesButton_Click"
                    IsDefault="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.YesButton_AccessibleName}"/>
            <Button x:Name="NoButton"
                    Content="{x:Static dialogs:DialogsResource.NoButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Margin="0,0,8,0"
                    Click="NoButton_Click"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.NoButton_AccessibleName}"/>
            <Button x:Name="CancelButton"
                    Content="{x:Static dialogs:DialogsResource.CancelButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.CancelButton_AccessibleName}"/>
        </StackPanel>
    </Grid>
</vs:DialogWindow>
