<vs:DialogWindow x:Class="Microsoft.Data.Entity.Design.UI.Views.Dialogs.ReferentialConstraintDialog"
                 x:ClassModifier="internal"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns:dialogs="clr-namespace:Microsoft.Data.Entity.Design.UI.Views.Dialogs"
                 mc:Ignorable="d"
                 d:DesignWidth="500"
                 d:DesignHeight="400"
                 Width="500"
                 Height="400"
                 MinWidth="450"
                 MinHeight="350"
                 ShowInTaskbar="False"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 FontFamily="{DynamicResource VsFont.EnvironmentFontFamily}"
                 FontSize="{DynamicResource VsFont.EnvironmentFontSize}"
                 Background="{DynamicResource VsBrush.ToolWindowBackground}"
                 Title="{x:Static dialogs:DialogsResource.RefConstraintDialog_Title}"
                 HasHelpButton="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Principal Role -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static dialogs:DialogsResource.RefConstraintDialog_PrincipalLabel}"
                   Margin="0,0,0,4"/>
        <ComboBox x:Name="PrincipalRoleComboBox"
                  Grid.Row="1"
                  Margin="0,0,0,12"
                  SelectionChanged="PrincipalRoleComboBox_SelectionChanged"
                  AutomationProperties.Name="{x:Static dialogs:DialogsResource.RefConstraintDialog_PrincipalLabel}"/>

        <!-- Dependent Role -->
        <TextBlock Grid.Row="2"
                   Text="{x:Static dialogs:DialogsResource.RefConstraintDialog_DependentLabel}"
                   Margin="0,0,0,4"/>
        <TextBox x:Name="DependentRoleTextBox"
                 Grid.Row="3"
                 IsReadOnly="True"
                 Margin="0,0,0,12"
                 AutomationProperties.Name="{x:Static dialogs:DialogsResource.RefConstraintDialog_DependentLabel}"/>

        <!-- Mapping ListView -->
        <ListView x:Name="MappingsListView"
                  Grid.Row="4"
                  Margin="0,0,0,12"
                  SelectionMode="Single"
                  SelectionChanged="MappingsListView_SelectionChanged"
                  MouseDoubleClick="MappingsListView_MouseDoubleClick"
                  KeyDown="MappingsListView_KeyDown"
                  AutomationProperties.Name="Property Mappings">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="PrincipalKeyColumn"
                                    Header="{x:Static dialogs:DialogsResource.RefConstraintDialog_PrincipalKeyHeader}"
                                    Width="200"
                                    DisplayMemberBinding="{Binding PrincipalKeyDisplay}"/>
                    <GridViewColumn x:Name="DependentKeyColumn"
                                    Width="200">
                        <GridViewColumn.Header>
                            <TextBlock x:Name="DependentKeyHeader"
                                       Text="{x:Static dialogs:DialogsResource.RefConstraintDialog_DependentKeyHeader}"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DependentPropertyDisplay}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Dependent Key ComboBox (overlay for inline editing) -->
        <ComboBox x:Name="DependentKeyComboBox"
                  Grid.Row="4"
                  Visibility="Collapsed"
                  SelectionChanged="DependentKeyComboBox_SelectionChanged"
                  LostFocus="DependentKeyComboBox_LostFocus"
                  KeyDown="DependentKeyComboBox_KeyDown"
                  AutomationProperties.Name="Dependent Key Selection"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="{x:Static dialogs:DialogsResource.OKButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Margin="0,0,8,0"
                    Click="OkButton_Click"
                    IsDefault="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.OKButton_AccessibleName}"/>
            <Button x:Name="DeleteButton"
                    Content="{x:Static dialogs:DialogsResource.DeleteButton_Text}"
                    MinWidth="75"
                    Height="23"
                    Margin="0,0,8,0"
                    Click="DeleteButton_Click"
                    AutomationProperties.Name="Delete Referential Constraint"/>
            <Button Content="{x:Static dialogs:DialogsResource.CancelButton_Text}"
                    MinWidth="75"
                    Height="23"
                    IsCancel="True"
                    AutomationProperties.Name="{x:Static dialogs:DialogsResource.CancelButton_AccessibleName}"/>
        </StackPanel>
    </Grid>
</vs:DialogWindow>
